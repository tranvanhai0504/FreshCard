<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:layout_margin="6dp"
        android:translationZ="6dp"
        android:background="@drawable/rounded_shadow"
        android:id="@+id/constraintLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtIntex"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="1"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/textCard1"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/winner_img"
            app:layout_constraintTop_toTopOf="@id/txtIntex"
            app:layout_constraintLeft_toLeftOf="@id/txtIntex"
            app:layout_constraintBottom_toBottomOf="@id/txtIntex"
            app:layout_constraintRight_toRightOf="@id/txtIntex"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFullname"
            android:text="Phu Qui"
            android:textSize="14dp"
            android:textColor="@color/textCard1"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/txtIntex"
            app:layout_constraintBottom_toBottomOf="@id/txtIntex"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/txtPerforment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="12 correct / 01:32"
            android:textSize="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>