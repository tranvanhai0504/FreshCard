<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_shadow"
    android:translationZ="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="6dp"

        android:paddingLeft="20dp">
        <ImageView
            android:id="@+id/imgFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bfodler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category name"
            android:textColor="@color/strongGreen"
            android:textStyle="bold"
            android:textSize="8dp"
            android:id="@+id/txtCategoryName"
            app:layout_constraintTop_toBottomOf="@+id/imgFolder"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 topics"
            android:textColor="#B0B0B0"
            android:textStyle="bold"
            android:textSize="6dp"
            android:id="@+id/txtTotalTopic"
            app:layout_constraintTop_toBottomOf="@+id/txtCategoryName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="3dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/horizontal_option"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#fff"
            android:id="@+id/btnOption"
            android:layout_marginTop="-10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>