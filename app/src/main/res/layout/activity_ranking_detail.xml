<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingRight="32dp"
    android:paddingLeft="32dp"
    android:layout_marginBottom="23dp"
    android:orientation="vertical"
    tools:context=".RankingDetailActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button"
        android:drawableLeft="@drawable/round_arrow_back_24"
        android:paddingHorizontal="7dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11pt"
        android:text="Topic: Music"
        android:textStyle="bold"
        android:textColor="@color/strongGreen"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtTopicName"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        tools:listitem="@layout/ranking_user_card"
        android:id="@+id/rankingInfoRecyclerView"/>



</LinearLayout>